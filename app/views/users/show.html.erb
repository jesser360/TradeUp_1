<%= render 'partials/userBanner' %>





<h4>Username:<%=@user.username%></h4>
<h4>Email:<%=@user.email%></h4>
<h4>Location:<%=@user.location%></h4>
<h4>Rating:<%=@user.rating%></h4>
<h4>Role:<%=@user.role%></h4>
<h4>Background color:<%=@user.background_color%></h4>
<br />
<h2>My items</h2>
<%@items.each do |item|%>
<img class="item-image" src="<%= item.image%>" alt="item image">
<h5>title:<%=item.title%></h5>
<h5>descrip:<%=item.description%></h5>
<h5>condition:<%=item.condition%> </h5>
<h5>cateogry:<%=item.category%> </h5>
<h5>group:<%=item.group%> </h5>
<p class = "item-trash-link"><%=link_to "/items/destroy/"+(item.id.to_s),:method=>'delete' do%>
  <span class="cart glyphicon glyphicon-trash"</span>
<%end%></p>
<p class = "link"><%=link_to edit_item_path_url(item),:method=>'get' do%>
  <span class="cart glyphicon glyphicon-pencil"</span>
<%end%></p>
<br /><br />
<%end%>
<%=link_to 'Edit Profile', edit_user_path_url(@user)%>
<%= link_to 'Create an item', new_item_path_url%>
