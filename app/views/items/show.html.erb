<div class="container">
  <div class="row" align="center">
    <div class="col-md-6">
      <img class="item-image" src="<%= @item.image%>" alt="item image">
        <%@found = Item.find_by_id(@item.id)%>
          <%if logged_in?%>
          <%if (@favorites.where(:user => @user).where(:item => @found).empty?)%>
          <h3><%=link_to post_favorites_path_url(item_id: @item.id), :method=>'post' do%>
            <span class="cart glyphicon glyphicon-heart-empty "</span>
            <%end%>
          </h3>
        <%else%>
        <h3><%=link_to delete_favorites_path_url(item_id: @item.id), :method=>'delete' do%>
          <span class="cart glyphicon glyphicon-heart"</span>
            <%end%></h3>
        <%end%>
      <%end%>
      <%=link_to "Make an Offer", new_offer_path_url(item_id: @item.id), :controller => 'offers', :method =>'get', class: "btn btn-success" %>
    </div>

      <div class="col-md-6">
        <h5 id="title"><%=@item.title%></h5>
        <h5><%=@item.description%></h5>
        <br/>
        <br/>
        <h5 style="display: inline-block;">Condition:<%= @item.condition %></h5>
        <h5 style="display: inline-block;">Location:<%= @item.user.location.to_s.to_region %></h5>
        <br/>
        <h5 style="display: inline-block;">Category:<%= @item.category %> </h5>
        <h5 style="display: inline-block;">User: <%= @item.user.username %></h5>
      </div>
    </div>
</div>
<h3 id="relItems">Related Items:</h3>
