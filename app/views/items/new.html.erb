<h1 align="center">Create a new item to trade!</h1>
<%= form_for @item, html: { multipart: true }  do |f|%>
<div class="container" align="center">
  <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
  <br/>
  <%= f.number_field :category, class: "form-control", placeholder: "Category", autofocus: true %>
  <br/>
  <%= f.number_field :condition, class: "form-control", placeholder: "Type", autofocus: true %>
  <br/>
  <%= f.file_field :image, class: "form-control", placeholder: "Image", autofocus: true %>
  <br/>
  <%= f.number_field :group, class: "form-control", placeholder: "Condition", autofocus: true%>
  <br/>
  <%= f.text_area :title, class: "form-control", placeholder: "Description", autofocus: true %>
  <br/>
  <%= f.submit "Create", class: 'btn btn-primary btn-md' %>
  <%end%>
</div>
