<div class="col-xs-12">
  <div class="row">
    <div class="col-lg-6 col-xs-12">
      <h1 style="padding-left: 2.3vw; margin-top: 45px">No money? No problem!</h1>
      <h3 style="padding-left: 2.3vw; margin-top:40px">Our simple and easy to use platform<br>
        lets you trade up from one item to the next.<br>
        The possibilities are endless!</h3>
        <%= link_to 'Learn More', learnmore_path_url, class: 'btn btn-info', id: 'learnBtnPosition' %>
    </div>
    <div class="col-lg-6 col-xs-12">
      <img class="img-responsive" src="http://i.imgur.com/2vSqC6A.jpg">
    </div>
  </div>
</div>

<div class="col-lg-12" style="padding: 70px 0 50px 0; height: 400px">
  <div class="row">
    <div class="col-lg-4 col-xs-12 col-md-6 text-center">
      <div class="row">
        <% 2.times do %>
          <div class="col-lg-6">
            <img class="smallImage" src="<%= @randomexperience.image %>">
          </div>
          <h4>
        <% end %>
      </div>
      <div class="col-lg-12">
        <%= button_to 'See Featured Experiences', '/items/groupie/2', :controller => 'items', :method => 'get', class:"btn btn-warning"%>
      </div>
    </div>
    <div class="col-lg-4 col-md-6 col-xs-12 text-center">
      <div class="row">
        <% 2.times do %>
          <div class="col-lg-6">
            <img class="smallImage" src="<%= @randomitem.image %>">
          </div>
        <% end %>
      </div>
      <div class="col-lg-12">
        <%= button_to 'See Featured Items', '/items/groupie/3', :controller => 'items', :method => 'get', class:"btn btn-warning"%>
      </div>
    </div>
    <div class="col-lg-4 col-md-6 col-xs-12 text-center">
      <div class="row">
        <% 2.times do %>
          <div class="col-lg-6">
            <img class="smallImage" src="<%= @randomservice.image %>">
          </div>
        <% end %>
      </div>
      <div class="col-lg-12">
        <%= button_to 'See Featured Services', '/items/groupie/1', :controller => 'items', :method => 'get', class:"btn btn-warning"%>
      </div>
    </div>
  </div>
</div>


