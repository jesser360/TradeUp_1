
<div class="container" align="center">

  <h1>Welcome Back!</h1>
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: '/login') do |f| %>

  <div class="form-group">
    <div class="col align-self-center">
      <%= f.text_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col align-self-center">
      <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "off" %>
    </div>
  </div>

  <a href="/signup">Don't have an account?</a><br/>

  <%= f.submit "Log in", class: 'btn btn-primary btn-md' %>

  <% end %>

</div>
